<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layoutDirection="rtl"
    android:layout_gravity="center"
    android:paddingLeft="16dp">


    <EditText
        android:id="@+id/classification_name_edit_text_classification_pop_up_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:hint="הכנס את שם הסיווג"
        android:gravity="center"/>


    <Button
        android:id="@+id/add_classification_name_btn_classification_pop_up_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classification_name_edit_text_classification_pop_up_window"
        android:text="הוסף"/>



</androidx.constraintlayout.widget.ConstraintLayout>