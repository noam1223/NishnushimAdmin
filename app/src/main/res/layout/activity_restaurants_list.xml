<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantsListActivity">

    <TextView
        android:id="@+id/head_line_activity_restaurant_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="רשימת מסעדות"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="26dp"/>



    <Button
        android:id="@+id/move_to_add_restaurant_btn__restaurant_list_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_alignParentLeft="true"
        android:text="הוסף מסעדה"
        android:layout_marginLeft="12dp"/>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/restaurant_recycler_view_activity_restaurant_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head_line_activity_restaurant_list"
        android:layout_marginTop="16dp"/>


</RelativeLayout>