<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:layoutDirection="rtl"
    android:orientation="horizontal"
    android:weightSum="2">


    <ImageView
        android:id="@+id/dish_image_view_dish_menu_item"
        android:layout_width="166dp"
        android:layout_height="match_parent" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="14dp"
        android:layout_weight="1.8"
        android:layoutDirection="rtl"
        android:orientation="vertical">


        <TextView
            android:id="@+id/dish_name_text_view_dish_menu_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שם המנה"
            android:textColor="@color/black"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/dish_detail_text_view_dish_menu_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="פירוט המנה בלה בלה בלה בלה בלה בלה בלה בלה בלה בלה "
            android:textColor="@color/black"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/dish_cosh_text_view_dish_menu_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="עלות המנה"
            android:textColor="@color/black"
            android:textSize="12sp" />


    </LinearLayout>

</LinearLayout>