<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="12dp"
    android:background="@drawable/more_details_areas_background_yellow"
    android:layout_marginLeft="12dp"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:weightSum="2">


        <ImageView
            android:id="@+id/dish_image_view_dish_menu_item"
            android:layout_width="166dp"
            android:layout_height="match_parent" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="14dp"
            android:layout_weight="1.8"
            android:layoutDirection="rtl"
            android:orientation="vertical">


            <TextView
                android:id="@+id/dish_name_text_view_dish_menu_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="שם המנה"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/dish_detail_text_view_dish_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="פירוט המנה בלה בלה בלה בלה בלה בלה בלה בלה בלה בלה "
                android:textColor="@color/black"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/dish_price_text_view_dish_menu_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="עלות המנה"
                android:textColor="@color/black"
                android:textSize="12sp" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp">

    <Button
        android:id="@+id/add_change_btn_dish_menu_item"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/btn_sign_in_clicked_background"
        android:fontFamily="@font/assistant_bold"
        android:text="הוסף שינוי למנה X"
        android:textColor="@drawable/btn_sign_in_clicked_text_view_opposite"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_weight="1"/>


        <Button
            android:id="@+id/delete_dish_btn_dish_menu_item"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/btn_sign_in_clicked_background"
            android:fontFamily="@font/assistant_bold"
            android:text="מחק מנה"
            android:textColor="@drawable/btn_sign_in_clicked_text_view_opposite"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_weight="1"/>


    </LinearLayout>


</LinearLayout>