<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="24dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הוסף שינוי לסיווג"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:textColor="@color/black"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="יש לשים לב כי אם השינוי ללא עלות אין צורך להוסיף סכום"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"/>



    <AutoCompleteTextView
        android:id="@+id/changes_name_auto_complete_add_change_pop_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="שם השינוי(תוספות, הורדות)"
        android:gravity="center"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="יש לבחור מן הרשימה או לרשום חדש"
        android:layout_gravity="center"
        android:textSize="10sp"
        android:textColor="@color/black"/>



    <Spinner
        android:id="@+id/unit_style_spinner_add_chane_pop_up_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:gravity="center">


    <EditText
        android:id="@+id/num_of_free_selection_edit_text_add_change_pop_up_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="חינם (כמות)"
        android:inputType="number"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginLeft="16dp"/>


    <EditText
        android:id="@+id/has_to_choose_edit_text_add_change_pop_up_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="כמות חובה לבחירה"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:inputType="number"/>


    </LinearLayout>


    <EditText
        android:id="@+id/change_detail_edit_text_add_change_pop_up_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="פירוט השינוי (ללא מלפפון, רוטב בצד, תוספת בוטניםִ"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:gravity="center"/>




    <EditText
        android:id="@+id/change_sum_edit_text_add_change_pop_up_window"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="הכנס סכום"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:gravity="center"
        android:inputType="number"
        android:digits="0123456789"/>





    <Button
        android:id="@+id/add_change_btn_add_change_pop_up_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:text="הוסף"/>


    <ListView
        android:id="@+id/regular_changes_list_view_add_change_pop_up_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




</LinearLayout>