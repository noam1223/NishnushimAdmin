    <ListView
        android:id="@+id/dish_changes_list_view_remove_dish_changes_pop_up_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"/>



</LinearLayout>