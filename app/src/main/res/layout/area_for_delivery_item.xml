<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:padding="16dp"
    android:gravity="center">
    
    
    <Button
        android:id="@+id/delete_btn_area_for_delivery_item"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_baseline_delete_24"/>



    <TextView
        android:id="@+id/area_name_text_view_area_for_delivery_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שם האיזור"
        android:layout_marginRight="12dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/delivery_cost_text_view_area_for_delivery_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="עלות משלוח"
        android:layout_marginRight="12dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>



    <TextView
        android:id="@+id/min_to_deliver_text_view_are_for_delivery_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מינימום למשלוח"
        android:layout_marginRight="12dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>



    <TextView
        android:id="@+id/time_of_delivery_text_view_area_for_delivery_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="זמן משלוח"
        android:layout_marginRight="12dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>


</LinearLayout>